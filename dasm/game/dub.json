{
	"name": "game",
	"targetType": "executable",
	"sourcePaths": [ "src" ],
	"importPaths": [ "src" ],

	"configurations": [
		{
			"name": "game-desktop",
			"targetName": "game",
			"targetPath": "../../bin",
			"workingDirectory": "../../bin",
			"versions": [ "GAME", "DESKTOP" ],
			"libs": ["Opengl32"],

			"dependencies": {
                "rt": { "path": "../libs/rt", "version": "*" },
				"gfx": { "path": "../libs/gfx", "version": "*" },
				"glfw": { "path": "../libs/glfw", "version": "*" },
			}
		},
		{
			"name": "game-wasm",
			"targetName": "game",
			"dflags-ldc": [
				"--fvisibility=hidden",
				"-linkonce-templates", 
				"-preview=intpromote",
				"-preview=rvaluerefparam"
			],
			"lflags-ldc": [ 
				"-L-z stack-size=1048576",

				"-allow-undefined"
			 ],

			"targetPath": "../../bin",
			"versions": [ "GAME", "WASM" ],

			"dependencies": {
                "rt": { "path": "../libs/rt", "version": "*" },
				"wasm": { "path": "../libs/wasm", "version": "*" },
				"gfx": { "path": "../libs/gfx", "version": "*" },
			}
		}
	]
}